<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:text="核销时间"
                android:textColor="#333333"
                android:textSize="16sp" />

            <com.gt.magicbox.canteen.widget.CardText
                android:id="@+id/filterRecordsActivity_cardView_dayType_all"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                app:CardViewColorNormal="#ffffff"
                app:CardViewColorPressed="#ffffff"
                app:backGroundDrawable="@drawable/shape_card_text_gradient"
                app:text="全部时间"
                app:textColorNormal="#ffffff"
                app:textColorPressed="#ffffff"
                app:text_size="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <com.gt.magicbox.canteen.widget.CardText
                    android:id="@+id/filterRecordsActivity_cardView_dayType_today"
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    app:CardViewColorNormal="#eeeeee"
                    app:CardViewColorPressed="#03b201"
                    app:text="今天"
                    app:textColorNormal="#333333"
                    app:textColorPressed="#ffffff"
                    app:text_size="14sp" />

                <com.gt.magicbox.canteen.widget.CardText
                    android:id="@+id/filterRecordsActivity_cardView_dayType_recent_seven_day"
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    app:CardViewColorNormal="#eeeeee"
                    app:CardViewColorPressed="#03b201"
                    app:text="近7天"
                    app:textColorNormal="#333333"
                    app:textColorPressed="#ffffff"
                    app:text_size="14sp" />

                <com.gt.magicbox.canteen.widget.CardText
                    android:id="@+id/filterRecordsActivity_cardView_dayType_recent_fifteen_day"
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    app:CardViewColorNormal="#eeeeee"
                    app:CardViewColorPressed="#03b201"
                    app:text="近15天"
                    app:textColorNormal="#333333"
                    app:textColorPressed="#ffffff"
                    app:text_size="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <com.gt.magicbox.canteen.widget.CardText
                    android:id="@+id/filterRecordsActivity_cardView_dayType_start_time"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:CardViewColorNormal="#eeeeee"
                    app:CardViewColorPressed="#03b201"
                    app:text="设置开始时间"
                    app:textColorNormal="#333333"
                    app:textColorPressed="#ffffff"
                    app:text_size="14sp" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#bbbbbb" />

                <com.gt.magicbox.canteen.widget.CardText
                    android:id="@+id/filterRecordsActivity_cardView_dayType_end_time"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    app:CardViewColorNormal="#eeeeee"
                    app:CardViewColorPressed="#03b201"
                    app:text="设置结束时间"
                    app:textColorNormal="#333333"
                    app:textColorPressed="#ffffff"
                    app:text_size="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/filterRecordsActivity_linearLayout_verification_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:text="就餐类型"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <com.gt.magicbox.canteen.widget.CardText
                    android:id="@+id/filterRecordsActivity_cardView_mealType_all"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="15dp"
                    app:CardViewColorNormal="#eeeeee"
                    app:CardViewColorPressed="#03b201"
                    app:text="所有类型"
                    app:textColorNormal="#333333"
                    app:textColorPressed="#ffffff"
                    app:text_size="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp">

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_mealType_breakfast"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="早餐"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_mealType_lunch"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="午餐"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp">

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_mealType_dinner"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="晚餐"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_mealType_supper"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="夜宵"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:text="核销类型"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp">

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_orderType_orderMeal"
                        android:layout_width="94dp"
                        android:layout_height="40dp"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="订餐"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_orderType_buyMeal"
                        android:layout_width="94dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="购餐"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_orderType_eventMeal"
                        android:layout_width="94dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="活动"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/filterRecordsActivity_linearLayout_cashRegister_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:text="支付方式"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <com.gt.magicbox.canteen.widget.CardText
                    android:id="@+id/filterRecordsActivity_cardView_payType_all"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="15dp"
                    app:CardViewColorNormal="#eeeeee"
                    app:CardViewColorPressed="#03b201"
                    app:text="所有类型"
                    app:textColorNormal="#333333"
                    app:textColorPressed="#ffffff"
                    app:text_size="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp">

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_payType_WeChat"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="微信"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_payType_aliPay"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="支付宝"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp">

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_payType_cash"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="现金"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                    <com.gt.magicbox.canteen.widget.CardText
                        android:id="@+id/filterRecordsActivity_cardView_payType_cardBalance"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        app:CardViewColorNormal="#eeeeee"
                        app:CardViewColorPressed="#03b201"
                        app:text="饭卡余额"
                        app:textColorNormal="#333333"
                        app:textColorPressed="#ffffff"
                        app:text_size="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filterRecordsActivity_textView_reset"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="重置"
            android:textColor="#333333"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>